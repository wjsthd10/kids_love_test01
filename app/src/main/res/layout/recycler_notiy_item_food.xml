<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/button_border_line"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date_dd_food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="03"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#00a9e0"
        android:textSize="28sp"
        android:layout_width="50dp"
        android:layout_height="30dp"/>


    <TextView
        android:id="@+id/date_text_food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_dd_food"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="목"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#00a9e0"
        android:textSize="16sp"
        android:layout_width="50dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/from_notiy_food"
        android:text="From. QA유치원"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/date_dd_food"
        app:layout_constraintBottom_toTopOf="@id/mini_date_notiy_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/mini_date_notiy_food"
        android:text="2020년 12월 3일 오후 17:09"
        android:layout_marginLeft="16dp"
        android:textColor="#818181"
        app:layout_constraintTop_toBottomOf="@id/from_notiy_food"
        app:layout_constraintBottom_toBottomOf="@id/line_notiy"
        app:layout_constraintLeft_toRightOf="@id/date_text_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_notiy"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:text="[식단표]"
        android:textColor="#00a9e0"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--    중앙선-->
    <TextView
        android:id="@+id/line_notiy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ImageView
        android:id="@+id/food_image_notiy"
        android:background="@drawable/border_line_blue"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_local_dining_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/notiy_foodNotiy"
        android:text="식단표 알림"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/line_notiy"
        app:layout_constraintLeft_toRightOf="@id/food_image_notiy"
        app:layout_constraintBottom_toBottomOf="@id/date_food_set_notiy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_food_set_notiy"
        android:text="11월 1일 식단표가 등록되었습니다."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/food_image_notiy"
        app:layout_constraintLeft_toRightOf="@id/food_image_notiy"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>